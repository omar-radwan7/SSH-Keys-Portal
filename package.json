{
  "name": "hpc-ssh-key-portal",
  "version": "1.0.0",
  "description": "Secure portal for managing SSH keys used to access HPC systems",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "cd backend-py && python3 -m uvicorn app.main:app --host 0.0.0.0 --port 3000",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend-py && python3 -m uvicorn app.main:app --host 0.0.0.0 --port 3000 --reload",
    "dev:frontend": "cd frontend && npm start",
    "install:all": "cd frontend && npm install --legacy-peer-deps && cd ../backend-py && python3 -m pip install --break-system-packages -r requirements.txt"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "ldapjs": "^3.0.7",
    "multer": "^1.4.5-lts.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "crypto": "^1.0.1",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.10.9",
    "@types/ldapjs": "^3.0.6",
    "@types/multer": "^1.4.11",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "keywords": ["ssh", "hpc", "security", "key-management"],
  "author": "Ahmed Abd El-Hameed",
  "license": "MIT"
} 